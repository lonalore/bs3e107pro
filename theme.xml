<?xml version="1.0" encoding="utf-8"?>
<e107Theme name="bs3e107pro" version="1.0" date="2016-11-21" compatibility="2.0">
    <author name="lonalore" url="https://github.com/lonalore/bs3e107pro"/>
    <summary>Bootstrap 3 theme</summary>
    <description>Bootstrap 3 based theme for e107 v2.</description>
    <category>generic</category>
    <keywords>
        <word>bootstrap</word>
        <word>e107</word>
    </keywords>
    <screenshots>
        <image>preview.png</image>
    </screenshots>
    <plugins>
        <plugin name='e107projects' url='https://github.com/lonalore/e107projects'/>
    </plugins>
    <layouts>
        <layout name='sidebar_right' title='Sidebar - Right' default='true'/>
        <layout name='full_home' title='Full width - Home' default='false'>
            <custompages>FRONTPAGE</custompages>
            <menuPresets>
                <area id='1'>
                    <menu name='e107projects_openlayers'/>
                </area>
                <area id='2'>
                    <menu name='e107projects_summary'/>
                </area>
            </menuPresets>
        </layout>
        <layout name='full_profile' title='Full width - Profile' default='false'>
            <custompages>user.php usersettings.php</custompages>
        </layout>
    </layouts>
</e107Theme>
